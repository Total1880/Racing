<Page x:Class="Racing.UI.WPF.RaceEngine.StartingConditions"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Racing.UI.WPF.RaceEngine"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="StartingConditions">

    <Grid>
        <StackPanel>
            <ComboBox Name="cmbRace" VerticalAlignment="Top"></ComboBox>
            <Button Name="btnStartRace" Content="Start Race" VerticalAlignment="Top" Click="BtnStartRace_Click"></Button>
        </StackPanel>
    </Grid>
</Page>
