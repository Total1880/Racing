<Page x:Class="Racing.UI.WPF.UserWindow"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Racing.UI.WPF"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="UserWindow" Loaded="OnLoaded">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Column="0">
            <Button Name="btnStartScreen" Content="Start Screen" Click="BtnStartScreen_Click"></Button>
            <Button Name="btnAddDriver" Content="Add Driver" Click="BtnAddDriver_Click"></Button>
            <Button Name="btnShowAllRaceTracks" Content="Show all racetracks" Click="BtnShowAllRaceTracks_Click"></Button>
            <Button Name="btnAddRaceTrack" Content="Add racetrack" Click="BtnAddRaceTrack_Click"></Button>
        </StackPanel>

        <Frame Name="frmUserFrame" Grid.Column="1"></Frame>
    </Grid>
</Page>
