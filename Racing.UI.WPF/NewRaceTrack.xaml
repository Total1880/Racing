<Page x:Class="Racing.UI.WPF.NewRaceTrack"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Racing.UI.WPF"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="NewRaceTrack">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"></ColumnDefinition>
            <ColumnDefinition Width="3*"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Column="0">
            <Label Content="Name" Height="25"></Label>
            <Label Content="Length" Height="25"></Label>
        </StackPanel>

        <StackPanel Grid.Column="1">
            <TextBox Name="txtRaceTrackName" Height="25"></TextBox>
            <TextBox Name="txtRaceTrackLength" Height="25"></TextBox>
        </StackPanel>

        <StackPanel Grid.Column="2">
            <Button Name="btnAddRaceTrack" Content="Add racetrack" Click="BtnAddRaceTrack_Click"></Button>
        </StackPanel>
        
    </Grid>
</Page>
